@model LinkedList
<div class="row vertical-center h-100">
    <div class="col-sm-12 col-md-8 m-auto">
        <div class="height-400">
            <div class="card align-middle h-100">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-justified mb-3" id="commandTab" role="tablist">
                        <li class="nav-item">
                            <a asp-action="Index" class="nav-link">Search</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="savedWords-tab" data-bs-toggle="tab"
                                data-bs-target="#savedWords" href="#savedWords"
                                role="tab" aria-controls="savedWords" aria-selected="true">Saved Words</a>
                        </li>
                    </ul>
                    <div class="tab-content m-4">
                        <div class="tab-pane fade show active" id="savedWords" role="tabpanel" aria-labelledby="savedWords-tab" tabindex="0">
                            @{
                                for (Node? n = Model?.Head; n != null; n = n.Next) {
                                    <div class="row">
                                        <a class="btn btn-link text-decoration-none text-dark fs-5 col-10 text-start" asp-action="Index" asp-route-searchStr="@n.Key">@n.Key</a>
                                        <a class="btn btn-link col-2" asp-action="SaveOrUnsave" asp-route-key="@n.Key"><small><i class="fas fa-trash text-danger"></i></small></a>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
