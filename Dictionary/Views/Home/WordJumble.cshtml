@model WordJumbleVM

<div class="row vertical-center h-100">
    <div class="col-sm-12 col-md-8 m-auto">
        <div class="height-400">
            <div class="card align-middle h-100">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-justified mb-3" id="commandTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="wordJumble-tab" data-bs-toggle="tab"
                                data-bs-target="#wordJumble" href="#wordJumble"
                                role="tab" aria-controls="wordJumble" aria-selected="true">Word Jumble</a>
                        </li>
                    </ul>
                    <div class="tab-content my-4">
                        <div class="tab-pane fade show active" id="saved-words-section" role="tabpanel" aria-labelledby="wordJumble-tab" tabindex="0">
                            @await Html.PartialAsync("_JumbleWord", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
