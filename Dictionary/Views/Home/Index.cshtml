@model IndexVM
<div class="row vertical-center h-100">
    <div class="col-sm-12 col-md-8 m-auto">
        <div class="height-400">
            <div class="card align-middle h-100">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-justified mb-3" id="commandTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="search-tab" data-bs-toggle="tab"
                                data-bs-target="#search" href="#search" role="tab"
                                aria-controls="search" aria-selected="true">Search</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="ViewSavedWords" class="nav-link">Saved Words</a>
                        </li>
                    </ul>
                    <div class="tab-content m-4">
                        <div class="tab-pane fade show active" id="search" role="tabpanel" aria-labelledby="search-tab" tabindex="0">
                            <form asp-action="Index" id="search-bar" autocomplete="off">
                                <div class="row">
                                    <div class="col-md-10 col-sm-10 col-10">
                                        <div class="input-group">
                                            <a type="button" class='btn btn-link px-0 @(Model.BackwardDisabled ? "a-disabled" : "")' asp-action="Backward" asp-route-currentKey="@ViewData["searchStr"]">
                                                <i class="fas fa-chevron-left fs-4"></i>
                                            </a>
                                            <a type="button" class="btn btn-link @(Model.ForwardDisabled ? "a-disabled" : "")" asp-action="Forward" asp-route-currentKey="@ViewData["searchStr"]">
                                                <i class="fas fa-chevron-right fs-4"></i>
                                            </a>
                                            <div class="form-control"  id="search-field">
                                                <input type="text" id="searchInput" class="form-control" name="searchStr" placeholder="algorithms" value="@ViewData["searchStr"]"/>
                                                <div id="suggestions"> </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-2">
                                        <button type="submit" class="btn btn-block btn-primary w-100 mt-1">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div class="p-absolute">
                                @if (Model?.Word == null && ViewData["searchStr"] != null) {
                                    <div class="mx-5 my-3 fw-bold">NOT FOUND</div>
                                } else if (Model?.Word != null) {
                                    <div class="mt-4">
                                        <div class="input-group">
                                            <h5 class="card-title pt-1">@Model?.Word?.KeyWord</h5>
                                            @if (!String.IsNullOrEmpty(Model!.Category)) {
                                                <div class="dropdown mt-1 mx-3">
                                                    <button class="badge rounded-pill text-bg-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">@Model.Category</button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a asp-action="ViewSavedWords" asp-route-category="@Model.Category" class="btn btn-link text-decoration-none">
                                                                View Category
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a asp-action="RemoveWord" asp-route-key="@Model.Word.KeyWord" asp-route-category="@Model.Category" class="btn btn-link text-decoration-none">
                                                                Remove
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            } else {
                                                <a asp-action="SaveWord" asp-route-key="@Model.Word.KeyWord" asp-route-category="" class="btn btn-link mx-2"><i class='far fa-bookmark'></i></a>
                                            }
                                            @* <a asp-action="SaveOrUnsave" asp-route-key="@Model.Word.KeyWord" class="btn btn-link"><i class='@(Model.WordIsSaved ? "fas" : "far") fa-bookmark'></i></a> *@
                                            @* <a class="btn btn-link d-inline"><i class="fas fa-volume-up"></i></a> *@
                                        </div>
                                        <h6 class="card-subtitle my-2 text-muted">@Model?.Word?.PartOfSpeech</h6>
                                        <p class="card-text">@Model?.Word?.Meaning</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
