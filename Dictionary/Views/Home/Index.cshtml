@model IndexVM
@* use tabs: one for SEARCH, one for HISTORY *@
<div class="row vertical-center h-100">
    <div class="col-sm-12 col-md-8 m-auto">
        <div class="height-400">
            <div class="card align-middle h-100">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-justified mb-3" id="commandTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="search-tab" data-bs-toggle="tab"
                                data-bs-target="#search" href="#search" role="tab"
                                aria-controls="search" aria-selected="true">Search</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="history-tab" data-bs-toggle="tab"
                                data-bs-target="#history" href="#history"
                                role="tab" aria-controls="history" aria-selected="false">History</a>
                        </li>
                    </ul>
                    <div class="tab-content m-4">
                        <div class="tab-pane fade show active" id="search" role="tabpanel" aria-labelledby="search-tab" tabindex="0">
                            <form asp-action="Index">
                                <div class="row">
                                    <div class="col-md-10 col-sm-10 col-10">
                                        <input type="text" class="form-control" name="searchStr" placeholder="algorithms" value="@ViewData["searchStr"]"/>
                                    </div>
                                    <button type="submit" class="btn btn-block btn-primary col-md-2 col-sm-2 col-2 m-auto">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                            <div class="mt-4">
                                <h5 class="card-title">@Model?.Word?.KeyWord</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@Model?.Word?.PartOfSpeech</h6>
                                <p class="card-text">@Model?.Word?.Meaning</p>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab" tabindex="0">
                            @{
                                if (Model?.HistoryTop != null) {
                                    for (Node? p = Model.HistoryTop; p != null; p = p.Next) {
                                        <div>
                                            <a class="btn btn-link text-decoration-none text-secondary" asp-action="Index" asp-route-searchStr="@p.Key">@p.Key</a>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
